<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/Progress_bule"
        >

        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:id="@+id/setting_btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/left_b"
            app:sb_shape_type="round"
            />

        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            app:sLeftBottomTextSize="12sp"
            app:sCenterTextString="设置中心"
            app:sCenterTextIsBold="true"
            app:sCenterTextColor="@color/white"
            app:sCenterViewGravity="left_center"
            app:sDividerLineType="none"
            app:sLeftIconMarginLeft="10dp"
            app:sLeftIconRes="@drawable/setting_title"
            app:sUseRipple="false"
            app:sLeftTextSize="12sp"
            app:sLeftViewGravity="left_center"
            app:sShapeSelectorNormalColor="@color/train_txt_bule" />

    </LinearLayout>



        <LinearLayout
            android:background="#f5f6f9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

<!--            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView-->
<!--                style="@style/InfoItem.Account"-->
<!--                android:id="@+id/setting_txt_history"-->
<!--                android:layout_marginRight="2dp"-->
<!--                app:sLeftTextString="历史记录" />-->

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                android:id="@+id/setting_txt_setting"
                android:layout_marginRight="2dp"
                app:sLeftTextString="系统设置" />

<!--            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView-->
<!--                style="@style/InfoItem.Account"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginRight="2dp"-->
<!--                app:sLeftTextString="蓝牙连接参数" />-->

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                android:id="@+id/setting_login"
                android:layout_marginRight="2dp"
                app:sLeftTextString="登录设置" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                android:layout_marginRight="2dp"
                app:sLeftTextString="版本信息" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                android:layout_marginRight="2dp"
                app:sLeftTextString="产品说明书" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                android:id="@+id/super_btn2"
                app:sSolidColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:sCornersTopRightRadius="5dp"
                app:sStrokeColor="@color/xui_config_color_gray_9"
                app:sStrokeWidth="0.1dp" />

        </LinearLayout>

    </LinearLayout>

    <!--  ViewPager，页面填充页  -->
    <com.rick.recoveryapp.utils.view.NoSwipeViewPager
        android:id="@+id/setting_pager_test"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:overScrollMode="never"
         />

</LinearLayout>