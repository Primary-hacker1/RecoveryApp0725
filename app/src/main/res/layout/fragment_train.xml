<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/train_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.xuexiang.xui.widget.tabbar.TabSegment
        android:id="@+id/tabSegment"
        android:layout_width="400dp"
        android:layout_gravity="center"
        android:layout_height="128px"
        app:ts_selected_color="@color/white"
        app:ts_normal_color="@color/xui_config_color_gray_9"
        android:textSize="18sp"
        app:ts_mode="fixed"
        app:indicator_height="25px"
        app:indicator_select_textSize="18px"
        />

    <com.rick.recoveryapp.utils.view.NoSwipeViewPager
        android:id="@+id/contentViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"/>

</LinearLayout>