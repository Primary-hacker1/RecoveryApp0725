<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="107dp"
        android:layout_marginRight="170dp"
        android:layout_marginBottom="107dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:xui_radius="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/loginlogo">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/login_txt_break"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                app:layout_constraintBottom_toTopOf="@id/test_welcome"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sDividerLineType="none"
                app:sLeftIconMarginLeft="0dp"
                app:sLeftIconRes="@drawable/power"
                app:sLeftTextColor="#0a1832"
                app:sLeftTextSize="19px"
                app:sLeftTextString="退出"
                app:sLeftViewMarginLeft="10dp"
                app:sRightViewMarginLeft="0dp"
                app:sShapeSelectorNormalColor="@color/train_txt_bule"
                app:sUseRipple="false" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/test_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="54dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                        android:id="@+id/main_txt_time"
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        app:sCenterBottomTextColor="#d1d1d1"
                        app:sCenterBottomTextSize="15sp"
                        app:sCenterBottomTextString="欢迎登录上下肢康复机"
                        app:sCenterSpaceHeight="2dp"
                        app:sCenterTextColor="#0a1832"
                        app:sCenterTextIsBold="true"
                        app:sCenterTextSize="25sp"
                        app:sCenterTextString="Welcome!"
                        app:sDividerLineType="none"
                        app:sShapeCornersRadius="20dp"
                        app:sUseRipple="false"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="27dp"
                    android:background="#f4f4f8"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@id/layout_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.7"
                    app:xui_borderColor="@color/white"
                    app:xui_borderWidth="1dp"
                    app:xui_radius="8dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/user" />

                    <EditText
                        android:id="@+id/login_etxt_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/register_bg_edittext"
                        android:hint="@string/login_admin" />

                </com.xuexiang.xui.widget.layout.XUILinearLayout>

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:id="@+id/layout_password"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="50dp"
                    android:background="#f4f4f8"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.7"
                    app:xui_borderColor="@color/white"
                    app:xui_borderWidth="1dp"
                    app:xui_radius="8dp"
                    tools:ignore="MissingConstraints,UnknownId">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/password" />

                    <EditText
                        android:id="@+id/login_etxt_password"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="@drawable/register_bg_edittext"
                        android:hint="@string/login_password"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/eyeg" />

                </com.xuexiang.xui.widget.layout.XUILinearLayout>

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintWidth_percent="0.7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_password">

                    <com.xuexiang.xui.widget.button.SmoothCheckBox
                        android:id="@+id/save_password"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        app:scb_color_checked="@color/xui_config_color_blue" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        app:sCenterTextColor="@color/xui_config_color_gray_6"
                        app:sCenterTextIsBold="true"
                        app:sCenterTextString="记住密码"
                        app:sDividerLineType="none"
                        app:sShapeCornersRadius="20dp"
                        app:sUseRipple="false"
                        tools:ignore="MissingConstraints" />

                </com.xuexiang.xui.widget.layout.XUILinearLayout>


                <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:id="@+id/login_btn_login"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="70dp"
                    android:gravity="center"
                    android:text="@string/login_login"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_password"
                    app:layout_constraintWidth_percent="0.42"
                    app:sb_color_pressed="@color/actionsheet_blue"
                    app:sb_color_unpressed="#16a6fb"
                    app:sb_radius="12px"
                    app:sb_ripple_color="@color/actionsheet_blue" />



            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </com.xuexiang.xui.widget.layout.XUILinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>